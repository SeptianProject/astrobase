---
import Card from "./Card.astro";

const response = await fetch("http://localhost:3001/api");
const blogs = await response.json();
---

<section class="min-h-screen w-full mx-auto bg-dark">
  <div class="flex flex-col items-center gap-y-14 justify-center">
    <div class="mt-10 relative size-fit">
      <h1 class="text-white font-semibold text-4xl z-10">
        My
        <span
          class="z-10 from-primary to-secondary bg-clip-text bg-gradient-to-r text-transparent"
          >Astro</span
        >Blog
      </h1>
      <div class="absolute -top-6 right-16 z-0 bg-white/5 size-24 rounded-full">
      </div>
      <div
        class="from-secondary to-transparent bg-gradient-to-r
			h-1 w-full rounded-full via-primary"
      >
      </div>
    </div>
    <div class="grid grid-cols-4 gap-3 h-full">
      {
        blogs?.data?.map((blog: any) => {
          return <Card title={blog.title} content={blog.content} />;
        })
      }
    </div>
  </div>
</section>
